<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/design_default_color_primary"

    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createGameBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="106dp"
            android:backgroundTint="#FFC107"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="utwórz grę"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/joinGameBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createGameBtn"
            android:layout_alignStart="@+id/createGameBtn"
            android:layout_alignEnd="@+id/createGameBtn"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1CE65F"
            android:textColor="@color/white"

            android:text="dołącz do gry"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/helloTxt"

            android:layout_alignParentEnd="true"

            android:layout_marginBottom="-2dp"
            android:layout_toEndOf="@+id/helloTxt"
            android:text="Ktos"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/helloTxt"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="62dp"
            android:text="Witaj,"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joinGameBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="217dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cornersempty"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="wyloguj"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"
            android:layout_below="@+id/helloTxt"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/group_32" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>