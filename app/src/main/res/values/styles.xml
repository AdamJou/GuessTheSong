<resources>

    <style name="Widget.Theme.CzyjaToMelodia.NoActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cornersempty</item>
    </style>

    <style name="Widget.Theme.CzyjaToMelodia.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="backToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/poppins</item>
        <item name="stTextSize">18sp</item>
        <item name="stColorBackground">@color/purple_200</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

</resources>
